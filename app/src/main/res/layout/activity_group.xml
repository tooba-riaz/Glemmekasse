<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.GroupFragment"
    android:orientation="vertical"
    android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/groups"
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:background="@drawable/group_background"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/group_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/group_icon_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/group_icon"
                android:layout_marginStart="10dp"
                android:text="@string/your_groups"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/create_group"
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:background="@drawable/group_background"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/create_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/plus_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/create_icon"
                android:layout_marginStart="10dp"
                android:text="@string/create"
                />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>