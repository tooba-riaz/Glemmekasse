<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.GroupFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:layout_centerInParent="true"
                android:textSize="26sp"
                android:textStyle="bold"
                android:text="@string/glemmekasse"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/groups"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:background="@drawable/group_background"
                android:padding="6dp"
                >
                <ImageView
                    android:id="@+id/group_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/group_icon_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/group_icon"
                    android:layout_marginStart="8dp"
                    android:text="@string/your_groups"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/create_group"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/group_background"
                android:padding="6dp"
                >
                <ImageView
                    android:id="@+id/create_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/plus_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/create_icon"
                    android:layout_marginStart="10dp"
                    android:text="@string/create"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:text="@string/discover"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/discover_groups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


</LinearLayout>